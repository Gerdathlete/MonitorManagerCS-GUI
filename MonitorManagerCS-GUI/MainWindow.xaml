<Window x:Class="MonitorManagerCS_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MonitorManagerCS_GUI.ViewModels"
        xmlns:livecharts="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=True}"
        Title="Nathan's Monitor Manager"
        SizeToContent="WidthAndHeight"
        ContentRendered="Window_ContentRendered">

    <Window.Icon>
        <BitmapImage UriSource="pack://siteoforigin:,,,/icon.ico"/>
    </Window.Icon>

    <Window.Resources>
        <!-- Tab Templates -->
        <DataTemplate DataType="{x:Type vm:DisplayTab}">
            <!-- Display Tab Content -->
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <ComboBox ItemsSource="{Binding VCPCodes}" SelectedItem="{Binding SelectedVCPCode}" 
                          Grid.Row="0" MaxWidth="200" Height="25">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text=" ("/>
                                <TextBlock Text="{Binding Code}"/>
                                <TextBlock Text=")"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <livecharts:CartesianChart 
                    Grid.Row="1" MinWidth="740" MinHeight="258"
                    Series ="{Binding Chart.Series}" XAxes="{Binding Chart.XAxes}" YAxes="{Binding Chart.YAxes}"
                    PointerReleasedCommand="{Binding Chart.PointerReleasedCommand}"
                    PointerMoveCommand="{Binding Chart.PointerMovedCommand}"
                    PointerPressedCommand="{Binding Chart.PointerPressedCommand}"
                    EasingFunction="{x:Null}"
                    TooltipPosition="{Binding Chart.TooltipPos}">
                </livecharts:CartesianChart>
            </Grid>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:SettingsTab}">
            <!-- Display Tab Content -->
            <TextBlock Text="{Binding Text}"/>
        </DataTemplate>
        
    </Window.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <Button Content="Get Displays!" 
                    Margin="5" Width="Auto" HorizontalAlignment="Center"
                    Command="{Binding GetDisplaysCommand}"/>
        </StackPanel>
        <TabControl DockPanel.Dock="Bottom"
            ItemsSource="{Binding Tabs}" SelectedIndex="{Binding SelectedTabIndex}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <!-- Tab Header -->
                    <TextBlock Text="{Binding TabName}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
    </DockPanel>
</Window>
