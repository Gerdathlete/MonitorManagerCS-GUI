<Window x:Class="MonitorManagerCS_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitorManagerCS_GUI"
        xmlns:vm="clr-namespace:MonitorManagerCS_GUI.ViewModels"
        xmlns:ctrls="clr-namespace:MonitorManagerCS_GUI.Controls"
        xmlns:livecharts="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=True}"
        Title="Nathan's Monitor Manager"
        Width="800" Height="450"
        FontFamily="pack://application:,,,/Assets/Fonts/#Inter Variable">

    <Window.Icon>
        <BitmapImage UriSource="pack://application:,,,/Assets/icon.ico"/>
    </Window.Icon>

    <Window.Resources>
        <!-- Tab Templates -->
        <DataTemplate DataType="{x:Type vm:DisplayTab}">
            <!-- Display Tab Content -->
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="5">
                    <!-- Combobox and activation checkbox -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" 
                                Orientation="Horizontal">
                        <ComboBox Grid.Column="0" 
                                  ItemsSource="{Binding VCPCodeCharts}" SelectedItem="{Binding SelectedVCPCodeChart}" 
                                  MaxWidth="200" Height="25">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" DataContext="{Binding VCPController}">
                                        <TextBlock Text="{Binding Name}"/>
                                        <TextBlock Text=" ("/>
                                        <TextBlock Text="{Binding Code}"/>
                                        <TextBlock Text=")"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock Text="Automated?" Margin="5,5,0,5"/>
                        <CheckBox Margin ="5" 
              DataContext="{Binding SelectedVCPCodeChart}" 
              IsChecked="{Binding Enabled}"/>
                    </StackPanel>

                    <Button Grid.Column="0" HorizontalAlignment="Right" 
                            Content="Save and Apply"
                            Command="{Binding SaveAndApplyCommand}"/>
                </Grid>
                
                <!-- Interactive Chart -->
                <Grid Grid.Row="1" 
                      DataContext="{Binding SelectedVCPCodeChart}"
                      Margin="5">
                    
                    <livecharts:CartesianChart 
                        MinWidth="740" MinHeight="258" Margin="5"
                        Series ="{Binding DraggableSeries}" 
                        XAxes="{Binding XAxes}" YAxes="{Binding YAxes}"
                        PointerReleasedCommand="{Binding PointerReleasedCommand}"
                        PointerMoveCommand="{Binding PointerMovedCommand}"
                        PointerPressedCommand="{Binding PointerPressedCommand}"
                        EasingFunction="{x:Null}"
                        TooltipPosition="{Binding TooltipPos}"
                        IsEnabled="{Binding Enabled}">
                    </livecharts:CartesianChart>
                    
                    <!-- Rectangle that indicates the chart is disabled -->
                    <Rectangle Fill="Gray" Opacity="0.25" IsHitTestVisible="False" 
                               Visibility="{Binding Enabled, 
                        Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                </Grid>
                
                
            </Grid>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:SettingsTab}">
            <!-- Settings Tab Content -->
            <TextBlock Text="{Binding Text}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DisplaysTab}">
            <AdornerDecorator>
                <ItemsControl ItemsSource="{Binding DisplayViewModels}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding Background}" 
                                    BorderBrush="{Binding BorderBrush}" 
                                    BorderThickness="{Binding BorderThickness}"
                                    Width="{Binding ActualBounds.Width}" 
                                    Height="{Binding ActualBounds.Height}"
                                    CornerRadius="5">

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseEnter">
                                        <i:InvokeCommandAction Command="{Binding MouseEnterCommand}"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="MouseLeave">
                                        <i:InvokeCommandAction Command="{Binding MouseLeaveCommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                
                                <TextBlock Text="{Binding Label}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="ctrls:ExplorableCanvas.X" Value="{Binding ActualBounds.Left}"/>
                            <Setter Property="ctrls:ExplorableCanvas.Y" Value="{Binding ActualBounds.Top}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ctrls:ExplorableCanvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </AdornerDecorator>
        </DataTemplate>

    </Window.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Reload Displays" 
                    Margin="5" Width="Auto" HorizontalAlignment="Center"
                    Command="{Binding LoadDisplaysCommand}"/>
            <Button Content="Start Service" 
                    Margin="5" Width="Auto" HorizontalAlignment="Center"
                    Command="{Binding StartServiceCommand}"/>
            <Button Content="End Service" 
                    Margin="5" Width="Auto" HorizontalAlignment="Center"
                    Command="{Binding EndServiceCommand}"/>
            <Button Content="Restart Service" 
                    Margin="5" Width="Auto" HorizontalAlignment="Center"
                    Command="{Binding RestartServiceCommand}"/>
        </StackPanel>
        <TabControl 
            DockPanel.Dock="Bottom" 
            ItemsSource="{Binding Tabs}" 
            SelectedItem="{Binding SelectedTab}" 
            SelectedIndex="{Binding SelectedTabIndex}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <!-- Tab Header -->
                    <TextBlock Text="{Binding TabName}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
    </DockPanel>
</Window>
