<Canvas x:Class="MonitorManagerCS_GUI.Controls.ExplorableCanvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:MonitorManagerCS_GUI.Controls"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        ClipToBounds="True"
        Background="Transparent">
    <Canvas.RenderTransform>
        <TransformGroup>
            <ScaleTransform x:Name="ZoomScale" ScaleX="1" ScaleY="1" />
            <TranslateTransform x:Name="PanTransform" />
        </TransformGroup>
    </Canvas.RenderTransform>
</Canvas>
